<header class="bg-brand px-4 sm:px-6 lg:px-10">
  <div class="flex items-center justify-between h-11">
    <div class="flex items-center space-x-2">
      <button type="button" class="p-1 rounded hover:bg-white hover:bg-opacity-25 text-white">
        <%= feather_icon "menu" %>
      </button>
      <%= link_to app_today_path, class: "p-1 rounded hover:bg-white hover:bg-opacity-25 text-white" do %>
        <%= feather_icon "home" %>
      <% end %>
    </div>
    <div>
      <div class="relative">
        <div class="flex items-center">
          <button type="button">
            <img class="h-7 w-7 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
          </button>
        </div>
        <div class="absolute origin-top-right right-0 mt-1 bg-white w-72 rounded border shadow">
          <ul class="py-1">
            <li>
              <a href="#" class="block py-2 px-3 hover:bg-gray-100 text-gray-700 hover:no-underline">
                <div class="flex items-center space-x-3">
                  <img class="h-11 w-11 rounded-full flex-shrink-0" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                  <div>
                    <span class="block font-semibold text-gray-900 leading-5">Abeid Ahmed</span>
                    <span class="block leading-5">abeidmama@gmail.com</span>
                  </div>
                </div>
                <div class="flex space-x-2 mt-3">
                  <%= feather_icon "settings" %>
                  <span class="leading-5">Settings</span>
                </div>
              </a>
            </li>
            <li><hr class="my-1"></li>
            <li>
              <a href="#" class="flex items-center space-x-2 py-2 px-3 hover:bg-gray-100 text-gray-700 hover:no-underline">
                <%= feather_icon "box" %>
                <span class="leading-5">Theme</span>
              </a>
            </li>
            <li>
              <a href="#" class="flex items-center space-x-2 py-2 px-3 hover:bg-gray-100 text-gray-700 hover:no-underline">
                <%= feather_icon "activity" %>
                <span class="leading-5">Activity log</span>
              </a>
            </li>
            <li><hr class="my-1"></li>
            <li>
              <a href="#" class="flex items-center space-x-2 py-2 px-3 hover:bg-gray-100 text-gray-700 hover:no-underline">
                <%= feather_icon "log-out" %>
                <span class="leading-5">Log out</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
