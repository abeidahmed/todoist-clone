<header class="bg-brand px-4 sm:px-6 lg:px-10">
  <div class="flex items-center justify-between h-11">
    <div class="flex items-center">
      <button data-action="sidebar#toggle" type="button" class="-ml-1 p-1 rounded hover:bg-white hover:bg-opacity-25 text-white lg:hidden">
        <%= feather_icon "menu" %>
      </button>
      <%= link_to app_today_path, class: "ml-2 p-1 rounded hover:bg-white hover:bg-opacity-25 text-white lg:-ml-1" do %>
        <%= feather_icon "home" %>
      <% end %>
    </div>
    <div>
      <div data-controller="toggle" data-action="toggle:click:outside->toggle#hide" data-toggle-attribute-value="hidden" class="relative">
        <div class="flex items-center">
          <button type="button" data-action="toggle#toggle">
            <img class="h-7 w-7 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
          </button>
        </div>
        <%= render "app/users/header_menu" %>
      </div>
    </div>
  </div>
</header>
